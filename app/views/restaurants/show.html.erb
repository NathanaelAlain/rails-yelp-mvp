<div class="container">
  <h1> <%= @restaurant.name %></h1>

  <div>
    <p>
      <%= @restaurant.address %>
      <%= @restaurant.phone_number %>
      <%= @restaurant.category %>
    </p>
  </div>
  <div>
    <%= simple_form_for [@restaurant, @review] do |f| %>
        <%= f.input :rating, collection: 0..5 %>
        <%= f.input :content%>
        <%= f.submit class: 'btn btn-primary' %>
      <% end %>
      <%= link_to "See all restaurants", restaurants_path %>
  </div>
</div>
